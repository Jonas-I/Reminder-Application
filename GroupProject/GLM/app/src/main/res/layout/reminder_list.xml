<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A5E3FF"
    android:padding="8dp"
    style="@style/AppTheme">

    <TextView
        android:id="@+id/remListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/checkAllButton"
        android:layout_toLeftOf="@id/listButton"
        android:textColor="#476877"
        android:textSize="24dp" />
    <!--android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"-->

    <EditText
        android:id="@+id/editRemListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/checkAllButton"
        android:layout_toLeftOf="@id/listButton"
        android:textColor="#476877"
        android:textSize="24dp"
        android:visibility="gone"
        android:imeActionId="4"
        android:singleLine="true"
        android:background="@android:color/transparent"/>

    <CheckBox
        android:id="@+id/checkAllButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="#A5E3FF"
        android:drawablePadding="25dp"
        android:focusable="false"
        android:layout_marginLeft="25dp"
        android:includeFontPadding="false"
        android:paddingLeft="25dp"
        android:paddingTop="25dp" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:drawableStart="@drawable/ic_list"
        android:background="#A5E3FF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:paddingLeft="12.5dp"
         />

